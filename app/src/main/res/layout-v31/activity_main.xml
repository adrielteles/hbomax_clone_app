<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_editor_absoluteX="1dp"
    app:layout_editor_absoluteY="1dp"
    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity"
        android:background="@drawable/gradient_background"
        >

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/viewPagerMain"
            android:layout_width="wrap_content"
            android:layout_height="600dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:iss_auto_cycle="true"
            app:iss_period="2500"
            app:iss_delay="0"
            app:iss_title_background="@drawable/gradient_background_slider"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="@+id/viewPagerMain"
            app:layout_constraintStart_toStartOf="@+id/viewPagerMain"
            app:layout_constraintEnd_toEndOf="@+id/viewPagerMain"
            android:src="@drawable/gradient_backgorund_top"
            />
        <ImageView
            android:id="@+id/image_menu_lateral"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_menu"
            app:layout_constraintStart_toStartOf="@+id/viewPagerMain"
            app:layout_constraintTop_toTopOf="@+id/viewPagerMain"
            app:tint="@color/white"
            />

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_logo_hbomax"
            app:layout_constraintTop_toTopOf="@+id/image_menu_lateral"
            app:layout_constraintBottom_toBottomOf="@+id/image_menu_lateral"
            app:layout_constraintStart_toStartOf="@+id/viewPagerMain"
            app:layout_constraintEnd_toEndOf="@+id/viewPagerMain"
            />



        <ImageView
            android:id="@+id/image_config"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_account_circle_24"
            app:layout_constraintTop_toTopOf="@+id/image_menu_lateral"
            app:layout_constraintBottom_toBottomOf="@+id/image_menu_lateral"
            app:layout_constraintEnd_toEndOf="@+id/viewPagerMain"
            />

        <TextView
            android:id="@+id/text_free_episodies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Episódios gratuitos"
            app:layout_constraintTop_toBottomOf="@+id/viewPagerMain"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/text_free_episodies_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curta episódios completos sem custo e sem necessidade de assinatura."
            app:layout_constraintTop_toBottomOf="@+id/text_free_episodies"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="3dp"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            android:fontFamily="sans-serif"
            android:textSize="13sp"
            />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_editor_absoluteX="1dp"
            app:layout_editor_absoluteY="1dp"
            app:layout_constraintTop_toBottomOf="@+id/text_free_episodies_description"
            app:layout_constraintStart_toStartOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/free_ep_1"
                    android:layout_width="180dp"
                    android:layout_height="272dp"
                    android:src="@drawable/cartaz_the_white_lotus"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HBO"
                    app:layout_constraintTop_toBottomOf="@+id/free_ep_1"
                    app:layout_constraintStart_toStartOf="@+id/free_ep_1"
                    android:textColor="@android:color/darker_gray"
                    />
                <ImageView
                    android:id="@+id/free_ep_2"
                    android:layout_width="180dp"
                    android:layout_height="272dp"
                    android:src="@drawable/cartaz_the_white_lotus"
                    app:layout_constraintStart_toEndOf="@+id/free_ep_1"
                    app:layout_constraintTop_toTopOf="@+id/free_ep_1"
                    app:layout_constraintBottom_toBottomOf="@+id/free_ep_1"
                    android:layout_marginStart="10dp"
                    />
                <ImageView
                    android:id="@+id/free_ep_3"
                    android:layout_width="180dp"
                    android:layout_height="272dp"
                    android:src="@drawable/cartaz_the_white_lotus"
                    app:layout_constraintStart_toEndOf="@+id/free_ep_2"
                    app:layout_constraintTop_toTopOf="@+id/free_ep_2"
                    app:layout_constraintBottom_toBottomOf="@+id/free_ep_2"
                    android:layout_marginStart="10dp"
                    />
                <ImageView
                    android:id="@+id/free_ep_4"
                    android:layout_width="180dp"
                    android:layout_height="272dp"
                    android:src="@drawable/cartaz_the_white_lotus"
                    app:layout_constraintStart_toEndOf="@+id/free_ep_3"
                    app:layout_constraintTop_toTopOf="@+id/free_ep_3"
                    app:layout_constraintBottom_toBottomOf="@+id/free_ep_3"
                    android:layout_marginStart="10dp"
                    />
                <ImageView
                    android:id="@+id/free_ep_5"
                    android:layout_width="180dp"
                    android:layout_height="272dp"
                    android:src="@drawable/cartaz_the_white_lotus"
                    app:layout_constraintStart_toEndOf="@+id/free_ep_4"
                    app:layout_constraintTop_toTopOf="@+id/free_ep_4"
                    app:layout_constraintBottom_toBottomOf="@+id/free_ep_4"
                    android:layout_marginStart="10dp"
                    />
                <ImageView
                    android:id="@+id/free_ep_6"
                    android:layout_width="180dp"
                    android:layout_height="272dp"
                    android:src="@drawable/cartaz_the_white_lotus"
                    app:layout_constraintStart_toEndOf="@+id/free_ep_5"
                    app:layout_constraintTop_toTopOf="@+id/free_ep_5"
                    app:layout_constraintBottom_toBottomOf="@+id/free_ep_5"
                    android:layout_marginStart="10dp"
                    />
                <ImageView
                    android:id="@+id/free_ep_7"
                    android:layout_width="180dp"
                    android:layout_height="272dp"
                    android:src="@drawable/cartaz_the_white_lotus"
                    app:layout_constraintStart_toEndOf="@+id/free_ep_6"
                    app:layout_constraintTop_toTopOf="@+id/free_ep_6"
                    app:layout_constraintBottom_toBottomOf="@+id/free_ep_6"
                    android:layout_marginStart="10dp"
                    />
                <ImageView
                    android:id="@+id/free_ep_8"
                    android:layout_width="180dp"
                    android:layout_height="272dp"
                    android:src="@drawable/cartaz_the_white_lotus"
                    app:layout_constraintStart_toEndOf="@+id/free_ep_7"
                    app:layout_constraintTop_toTopOf="@+id/free_ep_7"
                    app:layout_constraintBottom_toBottomOf="@+id/free_ep_7"
                    android:layout_marginStart="10dp"
                    />
                <ImageView
                    android:id="@+id/free_ep_9"
                    android:layout_width="180dp"
                    android:layout_height="272dp"
                    android:src="@drawable/cartaz_the_white_lotus"
                    app:layout_constraintStart_toEndOf="@+id/free_ep_8"
                    app:layout_constraintTop_toTopOf="@+id/free_ep_8"
                    app:layout_constraintBottom_toBottomOf="@+id/free_ep_8"
                    android:layout_marginStart="10dp"
                    />
                <ImageView
                    android:id="@+id/free_ep_10"
                    android:layout_width="180dp"
                    android:layout_height="272dp"
                    android:background="@android:color/system_neutral1_900"
                    app:layout_constraintStart_toEndOf="@+id/free_ep_9"
                    app:layout_constraintTop_toTopOf="@+id/free_ep_9"
                    app:layout_constraintBottom_toBottomOf="@+id/free_ep_9"
                    android:layout_marginStart="10dp"
                    />
                
            </androidx.constraintlayout.widget.ConstraintLayout>

        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>